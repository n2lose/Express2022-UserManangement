extends ../layouts/root
block content 

    h1 Create user 
    if errors 
        each error in errors 
            .alert.alert-danger= error
    form(action="/users/create", method="POST", enctype='multipart/form-data')
        .form-group.mb-3
            label(for="name") Name 
            input#name.form-control(name="name", type="text", value= values ? values.name : "")
        .form-group.mb-3
            label(for="email") Email 
            input#email.form-control(name="email", type="text", value= values ? values.email : "")
        .form-group.mb-3
            label(for="phone") Phone 
            input#phone.form-control(name="phone", type="text", value= values ? values.phone : "")
        .form-group.mb-3
            label(for="avatar") Avatar 
            input#avatar.form-control-file(name="avatar", type="file")
        button.btn.btn-primary.mt-3 Submit
